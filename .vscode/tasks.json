            "type": "shell",
            "command": "bash",
            "args": ["-c", "echo 'Starting Daily Maintenance Routine...' && ansible-playbook playbook.environment.localhost.ping.yaml && echo 'Updating package cache...' && ansible-playbook playbook.environment.localhost.update.packages.cache.yaml -K && echo 'Checking for available updates...' && ansible-playbook playbook.environment.localhost.upgradable.packages.yaml && echo 'Daily maintenance routine completed!'"],
