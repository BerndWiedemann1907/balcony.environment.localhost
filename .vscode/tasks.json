            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "Workflow: Development Environment Audit",
            "type": "shell",
            "command": "bash",
            "args": ["-c", "echo 'Starting Development Environment Audit...' && ansible-playbook playbook.environment.localhost.ping.yaml && echo 'Getting complete package inventory...' && ansible-playbook playbook.environment.localhost.get.packages.yaml && echo 'Checking system currency...' && ansible-playbook playbook.environment.localhost.upgradable.packages.yaml && echo 'Environment audit completed!'"],
