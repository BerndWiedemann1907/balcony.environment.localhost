{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Balcony: Test Connectivity (ping)",
            "type": "shell",
            "command": "ansible-playbook",
            "args": ["playbook.environment.localhost.ping.yaml"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
